@model List<LabTaskTwoAndThree.EF.Product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Products</h2>

<table class="table table-bordered">

    <tr>
        <th>Product Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Product Category</th>

    </tr>

    @foreach (var data in Model)
    {
        <tr>
            <th>@data.Id</th>
            <th>@data.Name</th>
            <th>@data.Price</th>
            <th>@data.Quantity</th>
            <th>@data.Category.Name</th>
            <th><a href="/Admin/EditProduct/@data.Id" class="btn btn-outline-warning">Edit</a></th>
            <th><a href="" class="btn btn-outline-danger">Delete</a></th>
        </tr>
    }

</table>