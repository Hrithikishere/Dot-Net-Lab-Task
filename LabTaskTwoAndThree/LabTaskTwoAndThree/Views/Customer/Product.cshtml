@model List<LabTaskTwoAndThree.EF.Product>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>Products</h2>

<table class="table table-bordered">

    <tr>
        <th>Product Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Product Category</th>
    </tr>

    @foreach (var data in Model)
    {
        <tr>
            <td>@data.Id</td>
            <td>@data.Name</td>
            <td>@data.Price</td>
            <td>@data.Quantity</td>
            <td>@data.Category.Name</td>
        </tr>
    }
</table>